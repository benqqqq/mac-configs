[gpg]
    program = /opt/homebrew/bin/gpg

[init]
    defaultBranch = main

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[includeIf "gitdir:~/Coding/Self/"]
    path = ~/Coding/.gitconfig.personal

[includeIf "gitdir:~/Coding/Reference_GitHub/"]
    path = ~/Coding/.gitconfig.personal

[includeIf "gitdir:~/Coding/Avl/"]
    path = ~/Coding/.gitconfig.avl
